server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /tmp/positions.yaml

client:
  url: "http://{{ loki_host }}:3100/api/prom/push"

scrape_configs:
 - job_name: system
   static_configs:
   - targets:
      - localhost
     labels:
      job: varlogs
      host: "{{ ansible_facts['nodename'] }}"
      __path__: /var/log/cloud-init.log   # do not flood at first
      # __path__: /var/log/*.log
